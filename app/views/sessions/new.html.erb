<h1>Sign in</h1>

<%= render 'common/flash' %>

<ul class="author-book-results">
  <%= form_for :session, url: sessions_path do |f| %>
    <li>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </li>
    <li>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.submit 'Sign in', id: 'signin', id: 'author_submit' %>
    </li>
  <% end %>
</ul>
